<%- model_class = Neighborhood -%>
<div class="page-header">
	<% if @city %>
		<h1><%= @city %> <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
	<% else %>
  		<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
	<% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
	  <th></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:city_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @neighborhoods.each do |neighborhood| %>
      <tr>
		<td><%= link_to "Reviews (#{neighborhood.reviews.count})", reviews_path(:neighborhood => neighborhood), :class => 'btn' %>
        <td><%= neighborhood.name %></td>
        <td><%= neighborhood.city.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_neighborhood_path(neighborhood), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      neighborhood_path(neighborhood),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to t('.new', :default => t("helpers.links.new")),
            new_neighborhood_path,
            :class => 'btn btn-primary' %>
