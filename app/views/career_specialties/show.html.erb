<%- model_class = CareerSpecialty -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @career_specialty.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:military_branch_id) %>:</strong></dt>
  <dd><%= @career_specialty.military_branch_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              career_specialties_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_career_specialty_path(@career_specialty), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              career_specialty_path(@career_specialty),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
