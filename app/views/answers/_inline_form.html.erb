<tr style='background-color:#D3D3D3;' class='postAnswers<%= post.id %>' id='postAnswerForm<%= post.id%>'>
	<td></td>
	<td><ul class='unstyled text-center'>
		<li><img src=<%= current_user.profile_image %> width='30' /></li>
	</ul></td>
	<%= form_tag(answers_path, :remote => true) do %>
		<td><%= text_field(:answer, :body) %></td>
		<%= hidden_field(:answer, :user_id, :value => current_user.id ) %>
		<%= hidden_field(:answer, :post_id, :value => post.id) %>
		<td><%= submit_tag 'Comment', :class => 'btn' %></td>
	<% end %>
	<td></td>
</tr>