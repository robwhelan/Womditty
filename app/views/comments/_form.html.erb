<%= form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :place_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :place_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :review_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :review_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :photo_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comments_path, :class => 'btn' %>
  </div>
<% end %>
