<%- model_class = Place -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @place.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line1) %>:</strong></dt>
  <dd><%= @place.address_line1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line2) %>:</strong></dt>
  <dd><%= @place.address_line2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighborhood_id) %>:</strong></dt>
  <dd><%= @place.neighborhood_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @place.city_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code) %>:</strong></dt>
  <dd><%= @place.zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:xgps) %>:</strong></dt>
  <dd><%= @place.xgps %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ygps) %>:</strong></dt>
  <dd><%= @place.ygps %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place_type) %>:</strong></dt>
  <dd><%= @place.place_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              places_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_place_path(@place), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              place_path(@place),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
