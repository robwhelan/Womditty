<%- model_class = DutyStation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @duty_station.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_id) %>:</strong></dt>
  <dd><%= @duty_station.city_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:military_branch_id) %>:</strong></dt>
  <dd><%= @duty_station.military_branch_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              duty_stations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_duty_station_path(@duty_station), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              duty_station_path(@duty_station),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
