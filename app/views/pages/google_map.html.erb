  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
  <style type="text/css">
    html { height: 100% }
    body { height: 100%; margin: 0; padding: 0 }
    #map-canvas { height: 100% }
  </style>
  <script type="text/javascript"
  src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAkmQDcP4u6gG5IULRLAiEjnfpE3vhYUOw&sensor=true">
  </script>
  <script type="text/javascript">
    function initialize() {
      var mapOptions = {
        center: new google.maps.LatLng(32.864593,-79.974396),
        zoom: 12,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };

     	var map = new google.maps.Map(document.getElementById("map-canvas"),
          mapOptions);

		// make boundaries for a neighborhood
	  	var neighborhood;
	
	  	var neighborhoodCoordinates = [
			new google.maps.LatLng (32.87897447602111,-79.94064331054688),
			new google.maps.LatLng (32.821578435980896, -79.92210388183594),
			new google.maps.LatLng (32.83311830938943, -79.90081787109375),
			new google.maps.LatLng (32.86888238595855, -79.89875793457031),
			new google.maps.LatLng (32.8755144602792, -79.87781524658203)
			];
/*
 *
 *			<% @coordinates.each do |coordinate| %>
 *				new google.maps.LatLng( <%= coordinate.lng %>, <%= coordinate.lat %> ),
 *			<% end %>
 */			

			
		neighborhood = new google.maps.Polygon({
		    paths: neighborhoodCoordinates,
		    strokeColor: "#FF0000",
		    strokeOpacity: 0.8,
		    strokeWeight: 2,
		    fillColor: "#FF0000",
		    fillOpacity: 0.35
		  });
		
		// call the neighborhood onto the map
		neighborhood.setMap(map);
		
		// create the info window
		var contentString = '<p>Drive from Daniel Island to base: 20-20 min</p>';

		var infowindow = new google.maps.InfoWindow({
		    content: contentString,
			maxWidth: 200
		});

		var marker = new google.maps.Marker({
		    position: new google.maps.LatLng(32.859726,-79.910738),
		    map: map,
		    title:"Daniel Island"
		});

	  	infowindow.open(map,marker);

    }
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
<div style="height:500px;">
  <div id="map-canvas"/>
</div>