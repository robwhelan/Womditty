
	<% postID = 'postID'+post.id.to_s %>
	<% postUserVoteCount = 'postUserVoteCount' + post.user.id.to_s %>

      <tr id='<%= postID %>' class="post">
		<td>
			<ul class="list-unstyled text-center">
				<%= render 'chevron', :post => post %>
			</ul>
		</td>
		<td><%= image_tag(post.photo.image.url(:medium)) if post.photo %></td>
        <td>
			<ul class="list-unstyled">
				<li><strong><%= post.title %></strong></li>
        		<li><%= post.body %></li>
     		</ul>
		</td>
		<td>
		<ul class="list-unstyled text-center">
			<li><%= link_to user_path(:id => post.user.id) do %>					
				<img width='30' src=<%= post.user.profile_image %> />
				<% end %></li>
	        <li><%= post.user.firstname %></li>
			<li class='<%= postUserVoteCount %>'><%= post.user.karma %></li>
		</ul>
		</td>
   		<td><%= post.created_at.to_date.strftime("%-m/%-d/%y") %></td>
		<td>
			<% post.tag_list.each do |tag| %>
				<%= link_to tag, posts_path(:q => {:body_cont => tag} )%>
			<% end %>
		</td>
		<td>
			<ul class="list-unstyled text-center">
				<%= render 'like_button', :post => post %>
			</ul>
		</td>
      </tr>