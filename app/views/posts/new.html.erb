<img width="30" src="#{<%= current_user.profile_image %>}" />

<%= form_tag(posts_path, :remote => true) do %>
	<%= text_field(:post, :body) %>
	<%= hidden_field(:post, :user_id, :value => current_user.id ) %>
	<% if params[:discuss_neighborhood] %>
		<div class="controls">
	      <%= collection_select( :posts, :neighborhood_id, Neighborhood.all, :id, :name ) %>
	      <%= collection_select( :posts, :neighborhood_topic_id, NeighborhoodTopic.all, :id, :name ) %>
	    </div>
	<% end %>
	<%= submit_tag 'Comment', :class => 'btn' %>
<% end %>	