<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
		<td>
			<ul class="unstyled text-center">
				<li><img src=<%= post.user.profile_image %>/></li>
		        <li><%= post.user.firstname %></li>
				<li><%= post.user.neighborhood.city.name %></li>
			</ul>
		</td>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.to_date.strftime("%-m/%-d/%y") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
		<td>
			<ul class="unstyled text-center">
				<li><%= post.likes %></li>
				<li><%= render 'shared/like' %></li>
			</ul>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>
