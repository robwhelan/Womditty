
<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
	<% postID = 'postID'+post.id.to_s %>
      <tr id='<%= postID %>'>
		<td>
			<ul class="unstyled text-center">
				<li><img src=<%= post.user.profile_image %>/></li>
		        <li><%= post.user.firstname %></li>
				<li><%= post.user.neighborhood.city.name %></li>
			</ul>
		</td>
        <td>
			<ul class="unstyled">
				<li><strong><%= post.title %></strong></li>
        		<li><%= post.body %></li>
     		</ul>
		</td>
   		<td><%= post.created_at.to_date.strftime("%-m/%-d/%y") %></td>
		<td><%= render 'chevron', :post => post %></td>
		<td>
			<ul class="unstyled text-center">
				<%= render 'like_button', :post => post %>
			</ul>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-primary' %>
