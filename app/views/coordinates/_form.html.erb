<%= form_for(@coordinate) do |f| %>
  <% if @coordinate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@coordinate.errors.count, "error") %> prohibited this coordinate from being saved:</h2>

      <ul>
      <% @coordinate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :neighborhood %><br />
	<%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name, {:selected => 4 } )%>
  </div>
  <div class="field">
    <%= f.label :city %><br />
	<%= f.collection_select(:city_id, City.all, :id, :name, :selected => 2 )%>
  </div>
  <div class="field">
    <%= f.label :place %><br />
	<%= f.collection_select(:place_id, Place.all, :id, :name, :selected => 5 )%>
  </div>
  <div class="field">
    <%= f.label :coordinate_number %><br />
    <%= f.number_field :coordinate_number %>
  </div>
  <div class="field">
    <%= f.label :lat %><br />
    <%= f.text_field :lat %>
  </div>
  <div class="field">
    <%= f.label :lng %><br />
    <%= f.text_field :lng %>
  </div>
  <div class="field">
    <%= f.label :lat_center %><br />
    <%= f.text_field :lat_center %>
  </div>
  <div class="field">
    <%= f.label :lng_center %><br />
    <%= f.text_field :lng_center %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
