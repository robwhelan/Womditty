<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= button_to("Un-Follow #{user.name}", user_follow_path(user.to_param, current_user.get_follow(user).id), :class => 'btn', :method => :delete, :remote => true) %>
  <% else %>
    <%= button_to("Follow #{user.name}", user_follows_path(user.to_param), :class => 'btn', :remote => true) %>
  <% end %>
<% end %>