

<div id="newPostModal" class="modal hide fade"  data-keyboard="false">
  <div class="modal-header">
    <h3>Write a new post</h3>
  </div>
  <div class="modal-body">
	<%= form_tag(post_path), :method => 'PUT', :id => 'newPostModalForm' )%>
	  <div class="control-group">
	    <div class="controls">
	      <%= text_field :post, :body %>
	    </div>
	  </div>
	  <div class="control-group">
		  <%= f.label :tag_list, "Tags (separated by commas)" %><br />
	    <div class="controls">
	      <%= f.text_field :tag_list, :class => 'text_field' %>
	    </div>
	  </div>

	  <div class="modal-footer">
		<%= submit_tag 'Done', :class => 'btn' %>
	  </div>

  </div>
	<script>
	$("#newPostModalForm").validate();
	</script>
</div>
<script type="text/javascript">
	$('#newPostModal').modal('show')
</script>
