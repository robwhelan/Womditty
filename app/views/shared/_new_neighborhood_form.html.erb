<div id="newNeighborhoodModal" class="modal hide fade" data-keyboard="false" data-backdrop="static">
  <div class="modal-header">
    <h3>Enter a new Neighborhood</h3>
  </div>
  <div class="modal-body">
	<%= form_for @neighborhood, :id => 'newNeighborhoodForm' do |f| %>
	  <div class="control-group">
	    <div class="controls">
	      <%= f.text_field :name %>
	    </div>
	  </div>
	  <div class="modal-footer">
		<%= f.submit 'Done', :class => 'btn' %>
	  </div>
	<% end %>
  </div>
</div>
<script type="text/javascript">
	$('#newNeighborhoodModal').modal('show')
</script>
