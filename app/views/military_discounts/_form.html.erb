<%= form_for @military_discount, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :place_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :place_id, :value => @place.id %>
    </div>
  </div>

	<%= @place.name %><br/>
	<%= @place.address_line1 %><br/>
	<%= @place.neighborhood.name %><br/>
	<%= @place.city.name %><br/>
	<%= @place.place_type %><br/>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                military_discounts_path, :class => 'btn' %>
  </div>
<% end %>
