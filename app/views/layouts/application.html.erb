<!DOCTYPE html>
<html lang="en">
  <head>
	<%= content_for :head %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Womditty" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->
	<%= include_gon(watch: true)%>
    <%= stylesheet_link_tag "application", :media => "all" %>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<%= stylesheet_link_tag "navbar-fixed-top", :media => "all" %>
	
	<!-- google analytics -->
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-42227639-1', 'womditty.com');
	  ga('send', 'pageview');

	</script>
  </head>
  <body>
	<!-- facebook SDK -->
	<!-- end facebook SDK -->

	<%= render 'layouts/fixedTopNavBar' %>
	
    <div class="container">
      <div class="row">
		<% if params[:controller] == "pages" %>
          <%= yield %>
		<% else %>
			<%= render 'shared/live' %>
		<% end %>
      </div><!--/row-->
      <footer>
        <p>&copy; Womditty 2013</p>
      </footer>

    </div> <!-- /container -->
    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
	<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.js" type="text/javascript"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>

  </body>
</html>
