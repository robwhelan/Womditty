<div class="modal fade" id="privateChatMenu" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
     	<h4 class="modal-title" id="myModalLabel">Private Chats</h4>
      </div>
      <div class="modal-body">
			<% @private_groups.each do |group| %>
			<%= link_to pages_chat_path(:group => group, :forum => @forum, :page => '1'), :class => "btn btn-primary btn-lg btn-block active" do %>
				<i class="fa fa-comment"></i> <%= group.name %>
				<% end %>
			<% end %>
      </div><!-- /modal body -->
    </div><!-- /modal content -->
  </div><!-- /modal dialog -->
</div><!-- /modal -->

<%= content_for :javascript do %>
	<script type="text/javascript">
	//close the modal?
	</script>
	<% end %>